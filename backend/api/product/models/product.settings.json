{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "Product",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "product_name": {
      "type": "string"
    },
    "product_main_image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "product_images": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "is_digital_product": {
      "type": "boolean",
      "default": false
    },
    "product_description": {
      "type": "richtext"
    },
    "slug": {
      "type": "uid",
      "targetField": "product_name"
    },
    "product_main_categories": {
      "via": "products",
      "collection": "product-main-categories"
    },
    "price": {
      "type": "decimal"
    },
    "product_secondary_categories": {
      "via": "products",
      "collection": "product-secondary-categories"
    },
    "SKU": {
      "type": "string",
      "unique": true,
      "required": true
    }
  }
}
